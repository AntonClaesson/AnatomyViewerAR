android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">


<fragment
    android:id="@+id/ux_fragment"
    android:name="com.example.anatomyviewer.AnatomyViewerFragment"
    android:layout_width="match_parent"
