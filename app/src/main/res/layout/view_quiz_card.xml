<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import
            alias="ExtensionFunctions"
            type="com.example.anatomyviewer.ar.ui.ExtensionsKt"
            />
        <variable
            name="quizData"
            type="com.example.anatomyviewer.ar.quiz.QuizData" />
    </data>

    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="720dp">

        <RelativeLayout
            android:id="@+id/quizCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:padding="16dp" >

            <TextView
                android:id="@+id/text_view_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{quizData.scoreLabelText}"
                tools:text="Score: 0"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_view_question_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_score"
                android:text="@{quizData.questionNumbText}"
                tools:text="Question: 1/10"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_view_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@{quizData.timeText}"
                tools:text="00:00"
                android:textColor="@android:color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text_view_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/radio_group"
                android:layout_marginBottom="16dp"
                android:text="@{quizData.questionText}"
                tools:text="Question text here Question text here Question text here Question text here "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:clearChecked="@{quizData.clearCheck}"
                >

                <RadioButton
                    android:id="@+id/radio_button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="@{() -> quizData.opt1Clicked()}"
                    android:text="@{quizData.opt1Text}"
                    tools:text="Option 1 Option 1 Option 1 Option 1 Option 1 Option 1 Option 1 "/>

                <RadioButton
                    android:id="@+id/radio_button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="@{() -> quizData.opt2Clicked()}"
                    android:text="@{quizData.opt2Text}"
                    tools:text="Option 2"/>

                <RadioButton
                    android:id="@+id/radio_button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="@{() -> quizData.opt3Clicked()}"
                    android:text="@{quizData.opt3Text}"
                    tools:text="Option 3"/>

            </RadioGroup>

            <Button
                android:id="@+id/button_confirm_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/radio_group"
                android:layout_marginTop="16dp"
                android:onClick="@{() -> quizData.clickedConfirmed()}"
                android:text="Confirm" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="@{quizData.quizFinished ? View.VISIBLE : View.GONE}"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{quizData.quizFinishedText}"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Quiz finished!\nScore: 0/10" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</layout>